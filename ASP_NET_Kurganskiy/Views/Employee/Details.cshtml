@model ASP_NET_Kurganskiy.ViewModels.EmployeeView

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
        <div class="container">
        <h2>Сведенья о работнике #@Model.Id</h2>
        <table>
            <tbody>
            <tr>
                <th>Фамилия</th>
                <td>@Model.SurName</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Отчество</th>
                <td>@Model.Patronymic</td>
            </tr>
            <tr>
                <th>Возраст</th>
                <td>@Model.Age</td>
            </tr>
            </tbody>
        </table>
        @Html.ActionLink("К списку сотрудников", "GetEmployes")
    </div>
</body>
</html>
